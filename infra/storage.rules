rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Videos: users can upload to their own match folders
    match /matches/{matchId}/{allPaths=**} {
      // Allow read/write if user is authenticated
      // Note: ownership is verified at Firestore level, storage just requires auth
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 500 * 1024 * 1024  // 500MB max
                   && (request.resource.contentType.matches('video/.*')
                       || request.resource.contentType.matches('image/.*'));
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
